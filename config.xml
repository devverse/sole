<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	versionCode="19"
	version 	= "2.0"
	id        = "com.sole.insider">

	<preference name="phonegap-version" value="2.9.0" />
	<preference name="fullscreen" value="false" />

	<name>Sole Insider</name>

	<description>
		Sole Insider, Sneaker release dates and sneaker restocks
	</description>

	<author href="soleinsider@gmail.com"
		email="soleinsider@gmail.com">
		Sole Insider
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.4" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.jpg" width="72" height="72" />
	<icon src="icon.jpg" width="48" height="48" />
	<icon src="icon.jpg" width="36" height="36"  gap:role="default"  />

    <gap:splash src="splash.jpg" />

	<feature name="http://api.phonegap.com/1.0/network"/>

</widget>
